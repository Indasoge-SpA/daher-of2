<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_status_id']" position="replace"/>
            <xpath expr="//label[@id='label_dates']" position="before">
                <field name="holiday_status_id" options="{'no_open': True}" context="{'from_manager_leave_form': True ,'employee_id': employee_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
