<?xml version="1.0" encoding="UTF-8"?>
<odoo> 
	<record id="custom_sales_settings" model="ir.ui.view">
    <field name="name">Restrict Settings</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="priority" eval="50" />
    <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]/div[@data-string='Sales']//div[hasclass('o_settings_container')][2]" position="inside">
       		<div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="restrict_user" class="oe_inline" />
                </div>
                <div class="o_setting_right_pane">
                    <label for="restrict_user"/>
                    <div class="text-muted">
                        Restrict Pricelists for User.
                    </div>
                </div>   
            </div>
   		</xpath>
    </field>
</record>
 
</odoo>